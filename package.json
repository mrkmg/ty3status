{
  "name": "ty3status",
  "version": "0.6.0",
  "description": "A Typescript based i3 bar status program. Supports long running commands.",
  "main": "build/main.js",
  "author": "Kevin Gravier <kevin@mrkmg.com>",
  "repository": "git+https://github.com/mrkmg/ty3status.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint -c .eslintrc.cjs --ext .ts src",
    "bin": "echo '#!/usr/bin/env node' > ./ty3status && cat ./build/ty3status.js >> ty3status && chmod +x ./ty3status",
    "build": "webpack",
    "postbuild": "npm run bin",
    "build-watch": "webpack --watch",
    "system-install": "cp ./ty3status /usr/bin/ty3status && cp ./ty3status.yaml /etc/ty3status.yaml",
    "uninstall": "rm /usr/bin/ty3status && rm /etc/ty3status.yaml"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.0",
    "@types/node": "^20.11.4",
    "@types/dateformat": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dateformat": "^5.0.3",
    "default-value": "^1.0.0",
    "eslint": "^8.56.0",
    "humanize-duration": "^3.17.0",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.0",
    "pad": "^3.2.0",
    "source-map-support": "^0.5.10",
    "striptags": "^3.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "xtend": "^4.0.1"
  }
}
